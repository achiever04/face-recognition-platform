# backend/.env.example - copy to backend/.env and set values

APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false

# MongoDB
MONGO_URI=mongodb://mongo:27017/
MONGO_DB_NAME=face_platform

# Redis (optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Storage / uploads
UPLOADS_DIR=/data/uploads
MODEL_DIR=/data/models
FL_WEIGHTS_DIR=/data/fl_weights

# Email / Alerts
EMAIL_ENABLED=false
SMTP_SERVER=
SMTP_PORT=587
SENDER_EMAIL=
SENDER_PASSWORD=
EMAIL_RECIPIENTS=

# SMS (Twilio) - optional
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_SENDER_PHONE=
SMS_RECIPIENTS=

# Security
JWT_SECRET_KEY=replace_with_random_secret

# Feature toggles
ENABLE_FEDERATED=false
ENABLE_DEEPFAKE_DETECTION=true

# Logging & retention
LOG_LEVEL=INFO
AUDIT_RETENTION_DAYS=90
