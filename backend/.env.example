# backend/.env.example
# Copy this file to backend/.env and fill values for local testing.
# DO NOT commit backend/.env with secrets.

# FastAPI / Uvicorn
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true

# MongoDB
MONGO_URI=mongodb://mongo:27017/face_platform
MONGO_DB=face_platform

# Redis (for pub/sub, caching)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Storage / uploads
UPLOADS_DIR=/data/uploads

# Model and data paths
MODEL_DIR=/data/models
FL_WEIGHTS_DIR=/data/fl_weights

# Email / Alerts (replace with actual providers or keep empty to disable)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ALERT_EMAIL_FROM=alerts@example.com

# SMS (Twilio) - optional
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Security / auth (JWT secret if used)
JWT_SECRET_KEY=replace_with_random_secret

# Other toggles
ENABLE_FEDERATED=false
ENABLE_DEEPFAKE_DETECTION=true

# Logging & retention
LOG_LEVEL=INFO
AUDIT_RETENTION_DAYS=90
