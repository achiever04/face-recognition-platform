# backend/.env

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/
MONGO_DB_NAME=face_recognition_db

# Encryption Key Path (Relative to backend directory)
ENCRYPTION_KEY_PATH=data/.encryption_key

# Email Notification Settings (Optional)
EMAIL_ENABLED=False
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SENDER_EMAIL=your_email@example.com
SENDER_PASSWORD=your_email_password
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com # Comma-separated

# SMS Notification Settings (Optional - Example for Twilio)
SMS_ENABLED=False
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_SENDER_PHONE=+15017122661 # Your Twilio phone number
SMS_RECIPIENTS=+15558675310,+15551234567 # Comma-separated E.164 format

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO