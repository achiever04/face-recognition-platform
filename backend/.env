# backend/.env - COMPLETE CONFIGURATION

# APPLICATION SERVER
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
FRONTEND_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# MONGODB CONFIGURATION
MONGO_URI=mongodb://localhost:27017/
MONGO_DB_NAME=face_recognition_db
MONGO_CONNECT_RETRIES=3
MONGO_CONNECT_BACKOFF=2.0
CAMERAS_COLLECTION=cameras

# CAMERA HEALTH CHECK SETTINGS
CAMERA_HEALTH_INTERVAL=30
CAMERA_HEALTH_REQUEST_TIMEOUT=4
CAMERA_BACKOFF_BASE=10
CAMERA_BACKOFF_MAX=3600
HEALTH_CONCURRENCY=10

# ENCRYPTION & SECURITY
ENCRYPTION_KEY_PATH=data/.encryption_key
DISABLE_ENCRYPTION=false
JWT_SECRET_KEY=replace_with_random_secret_in_production

# STORAGE DIRECTORIES
UPLOAD_DIR=data/uploads
FL_WEIGHTS_DIR=data/fl_weights
FL_DIR=data/fl_weights
MODEL_DIR=data/models
SNAPSHOT_DIR=data/snapshots
LOGS_DIR=logs
DEEPFAKE_LOGS_DIR=data/deepfake_logs

# ASYNC TASK MANAGER
ASYNC_TMP_DIR=/tmp/frp_async
ASYNC_MAX_WORKERS=1
ASYNC_MAX_UPLOAD_BYTES=5242880
ASYNC_JOB_RETENTION=3600

# EMAIL NOTIFICATION SETTINGS
EMAIL_ENABLED=false
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your_email@gmail.com
SENDER_PASSWORD=your_app_password_here
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com
ALERT_EMAIL_COOLDOWN_SECONDS=60
ALERT_EMAIL_RETRIES=2
ALERT_EMAIL_RETRY_BASE=1.5

# SMS NOTIFICATION (TWILIO)
SMS_ENABLED=false
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_SENDER_PHONE=+15017122661
SMS_RECIPIENTS=+15558675310,+15551234567
ALERT_SMS_COOLDOWN_SECONDS=60

# ALERT SYSTEM SETTINGS
ALERT_COOLDOWN_SECONDS=30
ALERT_THREAD_POOL=4

# LOGGING CONFIGURATION
LOG_LEVEL=INFO
DB_LOG_LEVEL=INFO
LOG_DIR=logs
LOG_FORMAT_JSON=false
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
AUDIT_LOG_FILE=audit.log
APP_LOG_FILE=app.log
AUDIT_TO_DB=false
AUDIT_RETENTION_DAYS=90
ENABLE_LOGGING=true

# MODEL MANAGEMENT
MODEL_CPU_MODE=true
MODEL_MAX_MEMORY_MB=6400
MODEL_IDLE_UNLOAD_SECONDS=600

# FACE RECOGNITION SETTINGS
FACE_TOLERANCE=0.6
FACE_MODEL=hog
FACE_CACHE_TTL=3600
FACE_BATCH_WORKERS=4
FACE_UPLOAD_DIR=data/uploads
FACE_BACKUP_DIR=data/backups

# DEEPFAKE DETECTION
ENABLE_DEEPFAKE_DETECTION=true
DEEPFAKE_UPLOAD_DIR=temp_uploads
ENHANCER_UPSCALE_FACTOR=2
ENHANCER_MAX_PIXELS=4000000
ENHANCER_JPEG_QUALITY=85
ENHANCER_SHARPEN=true

# FEDERATED LEARNING
ENABLE_FEDERATED=false

# THUMBNAIL CACHE
THUMB_CACHE_MEM_ITEMS=512
THUMB_CACHE_MEM_TTL=30
THUMB_CACHE_REDIS_TTL=30
THUMB_MAX_DISK_BYTES=209715200
THUMB_DISK_CLEANUP_BATCH=10

# REDIS (OPTIONAL)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# SOCKETIO
SOCKETIO_LOG_LEVEL=WARNING
ENGINEIO_LOG_LEVEL=WARNING
UVICORN_ACCESS_LOG_LEVEL=WARNING
