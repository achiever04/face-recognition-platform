# backend/.env - Local dev configuration (DO NOT commit secrets)

# App server
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true
FRONTEND_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/
MONGO_DB_NAME=face_recognition_db

# Encryption Key Path (Relative to backend directory)
ENCRYPTION_KEY_PATH=data/.encryption_key

# Storage / uploads
UPLOAD_DIR=data/uploads
FL_WEIGHTS_DIR=data/fl_weights
MODEL_DIR=data/models

# Email Notification Settings (Optional)
EMAIL_ENABLED=False
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SENDER_EMAIL=your_email@example.com
SENDER_PASSWORD=your_email_password
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# SMS Notification Settings (Optional - Twilio example)
SMS_ENABLED=False
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_SENDER_PHONE=+15017122661
SMS_RECIPIENTS=+15558675310,+15551234567

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# DB-specific logger variable used by app.utils.db
DB_LOG_LEVEL=INFO
AUDIT_RETENTION_DAYS=90

# Feature toggles
ENABLE_FEDERATED=false
ENABLE_DEEPFAKE_DETECTION=true

# Security / auth (JWT secret if used)
JWT_SECRET_KEY=replace_with_random_secret
